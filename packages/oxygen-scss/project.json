{
  "name": "oxygen-scss",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/oxygen-scss/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "packages/oxygen-scss/package.json",
        "outputPath": "packages/oxygen-scss/dist",
        "main": "packages/oxygen-scss/src/index.ts",
        "tsConfig": "packages/oxygen-scss/tsconfig.lib.json",
        "assets": []
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs oxygen-scss {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/oxygen-scss/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/oxygen-scss/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:oxygen-scss"]
}
