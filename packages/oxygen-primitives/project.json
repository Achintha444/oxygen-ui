{
  "name": "oxygen-primitives",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/oxygen-primitives/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/oxygen-primitives/dist",
        "main": "packages/oxygen-primitives/src/index.ts",
        "tsConfig": "packages/oxygen-primitives/tsconfig.lib.json",
        "assets": []
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs oxygen-primitives {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/oxygen-primitives/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/oxygen-primitives/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:oxygen-primitives"]
}
